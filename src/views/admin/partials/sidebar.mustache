        <img src="../assets/logo/frog-logo.svg" class="me-2" height="32" alt="">
        <span class="fs-4">Dashboard</span>
      </a>
      <hr>
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a href="/dashboard" class="nav-link text-white" onClick={} aria-current="page">
            <i class="bi bi-house me-2" width="16" height="16" style="color: white"></i>
            Home
          </a>
        </li>
        <li>
          <a href="/dashboard/create" class="nav-link text-white">
            <i class="bi bi-building-add me-2" width="16" height="16" style="color: white"></i>
            Criar Anúncio
          </a>
        </li>
        <li>
