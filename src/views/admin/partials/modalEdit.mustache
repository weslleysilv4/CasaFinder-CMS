<div class="modal fade" id="caraio" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Editar Informações</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/admin/criar-anuncio" class="row g-3 needs-validation" method="POST" validate>
          <div class="col-md-4">
            <label for="editValidationCustom01" class="form-label">Nome</label>
            <input type="text" class="form-control" id="editValidationCustom01" value="Alek" required>
            <div class="valid-feedback">
              Ok!
            </div>
          </div>
          <div class="col-md-4">
            <label for="editValidationCustom02" class="form-label">Sobrenome</label>
            <input type="text" class="form-control" id="editValidationCustom02" value="Silva" required>
            <div class="valid-feedback">
              Ok!
            </div>
          </div>
          <div class="col-md-4">
            <label for="editValidationCustomUsername" class="form-label">Username</label>
            <div class="input-group has-validation">
              <span class="input-group-text" id="inputGroupPrepend">@</span>
              <input type="text" class="form-control" id="editValidationCustomUsername" aria-describedby="inputGroupPrepend" required>
              <div class="invalid-feedback">
                Please choose a username.
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <label for="editValidationCustom03" class="form-label">Cidade</label>
            <input type="text" class="form-control" id="editValidationCustom03" required>
            <div class="invalid-feedback">
              Por favor, insira uma cidade válida.
            </div>
          </div>
          <div class="col-md-3">
            <label for="editValidationCustom06" class="form-label">Valor</label>
            <input type="number" class="form-control" id="editValidationCustom06" required>
            <div class="invalid-feedback">
              Por favor, insira um valor válido.
            </div>
          </div>
          <div class="col-md-3">
            <label for="editValidationCustom04" class="form-label">Estado</label>
            <select class="form-select" id="editValidationCustom04" required>
              <option selected disabled value="">Escolha...</option>
              <option>PR</option>
              <option>SP</option>
            </select>
            <div class="invalid-feedback">
              Por favor, selecione um Estado.
            </div>
          </div>
          <div class="col-md-3">
            <label for="editValidationCustom05" class="form-label">CEP</label>
            <input type="text" class="form-control" id="editValidationCustom05" required>
            <div class="invalid-feedback">
              Por favor, insira um CEP válido.
            </div>
          </div>
          <div class="col-12">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="editInvalidCheck" required>
              <label class="form-check-label" for="editInvalidCheck">
                Concorda com os termos e condições
              </label>
              <div class="invalid-feedback">
                Você precisa concordar para dar continuidade.
              </div>
            </div>
          </div>
          <div class="col-12">
            <button class="btn btn-primary" type="submit">Salvar Alterações</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


