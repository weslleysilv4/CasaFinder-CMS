<form action="/admin/criar-anuncio" class="row g-3 needs-validation" method="POST" validate>
  <div class="col-md-4">
    <label for="validationCustom01" class="form-label">Nome</label>
    <input type="text" class="form-control" id="validationCustom01" value="Alek" required>
    <div class="valid-feedback">
      Ok!
    </div>
  </div>
  <div class="col-md-4">
    <label for="validationCustom02" class="form-label">Sobrenome</label>
    <input type="text" class="form-control" id="validationCustom02" value="Silva" required>
    <div class="valid-feedback">
      Ok!
    </div>
  </div>
  <div class="col-md-4">
    <label for="validationCustomUsername" class="form-label">Username</label>
    <div class="input-group has-validation">
      <span class="input-group-text" id="inputGroupPrepend">@</span>
      <input type="text" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required>
      <div class="invalid-feedback">
        Please choose a username.
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <label for="validationCustom03" class="form-label">Cidade</label>
    <input type="text" class="form-control" id="validationCustom03" required>
    <div class="invalid-feedback">
      Por favor, insira uma cidade válida.
    </div>
  </div>
  <div class="col-md-3">
    <label for="validationCustom06" class="form-label">Valor</label>
    <input type="number" class="form-control" id="validationCustom06" required>
    <div class="invalid-feedback">
      Por favo, insira um valor válido.
    </div>
  </div>
  <div class="col-md-3">
    <label for="validationCustom04" class="form-label">Estado</label>
    <select class="form-select" id="validationCustom04" required>
      <option selected disabled value="">Escolha...</option>
      <option>PR</option>
      <option>SP</option>
    </select>
    <div class="invalid-feedback">
      Por favor, selecione um Estado.
    </div>
  </div>
  <div class="col-md-3">
    <label for="validationCustom05" class="form-label">CEP</label>
    <input type="text" class="form-control" id="validationCustom05" required>
    <div class="invalid-feedback">
      Por favor, insira um CEP válido.
    </div>
  </div>
  <div class="col-12">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
      <label class="form-check-label" for="invalidCheck">
        Concorda com os termos e condições
      </label>
      <div class="invalid-feedback">
        Você precisa concordar para dar continuidade.
      </div>
    </div>
  </div>
  <div class="col-12">
    <button class="btn btn-primary" type="submit">Criar Post</button>
  </div>
</form>