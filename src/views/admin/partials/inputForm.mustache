<form action="/dashboard/post/new" class="row g-3 needs-validation" method="POST" validate>
  <div class="col-md-4">
    <label for="validationCustom01" class="form-label">Título</label>
    <input type="text" class="form-control" id="validationCustom01" name="title" required>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>
  <div class="col-md-6">
    <label for="validationCustom02" class="form-label">Descrição</label>
    <input type="text" class="form-control" id="validationCustom02" name="description" required placeholder="Casa bonita, 4 cômodos, garagem, etc...">
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>
  <div class="col-md-4">
    <label for="validationCustomUsername" class="form-label">Email</label>
    <div class="input-group has-validation">
      <span class="input-group-text" id="inputGroupPrepend">@</span>
      <input type="email" class="form-control" id="validationCustomUsername" name="createdBy" value={{email}} aria-describedby="inputGroupPrepend" required>
      <div class="invalid-feedback">
        Por favor, insira um Email válido.
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <label for="validationCustom03" class="form-label">Endereço</label>
    <input type="text" class="form-control" id="validationCustom03" name="address" required placeholder="Rua Tchuros Bangus, Tudus bangus - 123456">
    <div class="invalid-feedback">
      Por favor, insira um Endereço válido.
    </div>
  </div>
  <div class="col-md-2">
    <label for="validationCustom06" class="form-label">Preço</label>
    <input type="number" class="form-control" id="validationCustom06" name="price" required placeholder="R$ 300,00">
    <div class="invalid-feedback">
      Por favo, insira um valor válido.
    </div>
  </div>
  <div class="col-12">
    <label for="validationCustom04" class="form-label">Imagem</label>
    <input type="text" class="form-control" id="validationCustom04" name="image" required placeholder="https://exemplodeimagem.com/imagem.png">
    <div class="invalid-feedback">
      Por favor, insira um url de imagem.
    </div>
  </div>
  <div class="col-12">
    {{! Termos }}
      <div class="form-check my-3">
        <div>
          <input class="form-check-input" type="checkbox" value="terms" id="flexCheckDefault" required>
          <label class="form-check-label text" for="flexCheckDefault">
          Concordo com os termos e condições
        </label>
        </div>
      </div>
    </div>
  </div>
  <div class="col-12">
    <button class="btn btn-primary" type="submit">Criar Post</button>
  </div>
</form>