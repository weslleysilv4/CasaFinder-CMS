{{>login/partials/head}}
<body class="d-flex align-items-center min-vw-100 min-vh-100 bg-dark bg-secondary">

  <main class="form-signin m-auto w-25">
    <form action="/login" method="POST">
      <div class="container-md-auto d-flex justify-content-center align-items-center gap-2">
        {{! Logo }}
        <img class="mb-4" src="assets/logo/frog-logo.svg" alt="Logo Image" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal text-white">Entrar</h1>
      </div>

      {{! Endereço de Email }}
      <div class="form-floating mb-3">

        <input type="email" class="form-control" name="email" id="floatingInput">

        <input type="email" class="form-control" id="floatingInput">

        <label for="floatingInput">Endereço de e-mail</label>
      </div>

      {{! Password }}
      <div class="form-floating">
        <input type="password" class="form-control" name="password" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Senha</label>
      </div>

      {{! Lembrar-me }}
      <div class="form-check text-start my-3">
        <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
        <label class="form-check-label text-white" for="flexCheckDefault">
          Lembrar-me
        </label>
      </div>

      {{! Sing in button }}
      <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
      <p class="mt-5 mb-3 text-body-secondary">© 2017–2024</p>
    </form>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>