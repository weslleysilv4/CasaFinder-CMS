<div class="album py-5 bg-body-tertiary">
  <div class="container">
    <h2 class="pb-4">Casas Disponíveis</h2>
    <div class="d-flex flex-nowrap gap-3 scroll-container">
      {{#data}}
      <div class="col-12 col-md-4 col-lg-3 mb-2 card-container">
        <div class="card shadow-sm " role="button" style="width: 18rem">
          <img src="../assets/casa1.jpg" class="card-img-top" alt="">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">
              {{description}}
            </p>
            <p class="card-text">
              {{address}}
            </p>
            <div class="d-flex justify-content-between align-items-center">
              {{#isAuthenticated}}
              <div class="btn-group d-flex justify-content-start">
                <!-- Botões de editar/excluir -->
                <button class="btn btn-primary">Editar</button>
                <button class="btn btn-danger">Excluir</button>
              </div>
              {{/isAuthenticated}}
              <div class="d-flex justify-content-end gap-2">
                <i class="bi bi-house-check-fill"></i>
                <p class="text-body-primary fw-bold">R$ {{price}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/data}}
    </div>
  </div>
</div>
